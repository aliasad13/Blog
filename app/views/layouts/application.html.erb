<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg ">
    <div class="container-fluid">
<!--      <a class="navbar-brand" href="#">Navbar</a>-->

      <%= link_to 'Foradian Blogs!!',root_path,class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"><i class="fa fa-bars"></i></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
<!--            <a class="nav-link" href="#">Link</a>-->
            <%= link_to '' %>
<% if user_signed_in? %>
            <% else %>
          <li class="nav-item">
            <!--          <a class="nav-link" href="#">Link</a>-->
            <%= link_to 'Blogs',blogs_path,class: 'nav-link' %>
          </li>
            <%end %>
          </li>

          <li class="nav-item">
            <!--          <a class="nav-link" href="#">Link</a>-->
            <%= link_to 'Bloggers',users_path,class: 'nav-link' %>
          </li>
          </li>



          <% if user_signed_in? %>
          <li class="nav-item">
            <!--          <a class="nav-link" href="#">Link</a>-->
            <%= link_to 'SignOut',logout_path,class: 'nav-link',method: :delete,data: {confirm: 'Come back soon'} %>
          </li>

            <li class="nav-item">
              <!--          <a class="nav-link" href="#">Link</a>-->
              <% if current_user.admin? %>
              <%= link_to @current_user.username+" "+'[admin]',user_path(current_user),class: 'nav-link' %>
           <% else %>
                <%= link_to @current_user.username,user_path(current_user),class: 'nav-link' %>
           <% end %>
            </li>

            <% else %>
            <li class="nav-item">
              <!--          <a class="nav-link" href="#">Link</a>-->
              <%= link_to 'SignIn',login_path,class: 'nav-link' %>
            </li>

            <li class="nav-item">
              <!--          <a class="nav-link" href="#">Link</a>-->
              <%= link_to 'SignUp',signup_path,class: 'nav-link' %>
            </li>


          <% end %>


          <li class="nav-item">
            <!--          <a class="nav-link" href="#">Link</a>-->
            <%#= link_to 'Edit Profile',edit_user_path,class: 'nav-link' %>

          </li>

        </ul>
<!--        <form class="d-flex">-->
<!--          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">-->
<!--          <button class="btn btn-outline-success" type="submit">Search</button>-->
<!--        </form>-->
      </div>
    </div>
  </nav>


  <div class="yield-container">


    <%= yield %>


  </div>





    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

  </body>
</html>
