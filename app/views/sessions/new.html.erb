<h1>Log In</h1>


<%= form_with(scope: :session, url: login_path,local: true) do |form| %>
<!--  scope for this form will be a session where session is a symbol-->



  <div class="mb-3 textarea">
    <%#= form.label :content %>
    <%= form.email_field :email,class:'form-control',placeholder:'Email' %>
  </div>

  <div class="mb-3 textarea new-article" >
    <%#= form.label :content %>
    <%= form.password_field :password,class:'form-control',placeholder:'Password'%>
  </div>

  <div class="actions">
    <%= form.submit "Log in" ,class:'btn btn-outline-secondary' %>
  </div>
<% end %>

