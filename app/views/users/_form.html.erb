

<div class="Signup">


  <br>
  <br>

  <%= form_with(model: @user, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>the following errors prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3 title">
      <%#= form.label :username %>
      <%= form.text_field :username,class:'form-control',placeholder:'Username' %>
    </div>

    <div class="mb-3 textarea">
      <%#= form.label :content %>
      <%= form.email_field :email,class:'form-control',placeholder:'Email' %>
    </div>

    <div class="mb-3 textarea new-article" >
      <%#= form.label :content %>
      <%= form.password_field :password,class:'form-control',placeholder:'Password'%>
    </div>

    <div class="actions">
      <%= form.submit(@user.new_record? ? "SignUp" : "Update" ,class:'btn btn-outline-secondary')%>
    </div>
  <% end %>


  <%= link_to 'Back', blogs_path %>
</div>

